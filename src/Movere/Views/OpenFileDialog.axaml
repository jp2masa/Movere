<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Movere"
        xmlns:v="clr-namespace:Movere.Views"
        xmlns:vm="clr-namespace:Movere.ViewModels"
        x:Class="Movere.Views.OpenFileDialog"
        x:DataType="vm:OpenFileDialogViewModel"
        Name="Dialog"
        MinWidth="240"
        MinHeight="160"
        Width="800"
        Height="480"
        Icon="{ReflectionBinding $self.Owner.Icon}"
        Title="{local:LocalizedString OpenFile}"
        WindowStartupLocation="CenterOwner">

    <DockPanel>

        <StackPanel DockPanel.Dock="Bottom"
                    Margin="4">

            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" MaxWidth="240" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           VerticalAlignment="Center"
                           Text="File name:" />

                <TextBox Grid.Column="2"
                         VerticalAlignment="Center"
                         Text="{Binding FileName}" />

                <ComboBox Grid.Column="4"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Center"
                          ItemsSource="{Binding Filters}"
                          SelectedItem="{Binding SelectedFilter}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayText}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </Grid>

            <StackPanel HorizontalAlignment="Right"
                        Margin="4"
                        Orientation="Horizontal"
                        Spacing="8">

                <Button Content="{local:LocalizedString Open}"
                        Command="{Binding OpenCommand}" />

                <Button Content="{local:LocalizedString Cancel}"
                        Command="{Binding CancelCommand}" />

            </StackPanel>

        </StackPanel>

        <ContentControl Content="{Binding FileExplorer}" />

    </DockPanel>

</Window>
